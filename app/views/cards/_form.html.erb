<h2>Add a card:</h2>
<%= form_for([@project, @card]) do |f| %>
    <% if @card.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@card.errors.count, "error") %> prohibited
                this card from being saved:</h2>
            <ul>
                <% @card.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    <p>
        <%= f.label :title %><br />
        <%= f.text_field :title %>
    </p>
    <p>
        <%= f.label :jenkins_url %><br />
        <%= f.text_field :jenkins_url %>
    </p>
    <p>
        <%= f.submit %>
    </p>
<% end %>
